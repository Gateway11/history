<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    tools:context="com.example.bluetoothbleserver.BluetoothClientActivity"
    android:layout_margin="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:layout_margin="10dp" >
        <include layout="@layout/edit_a" />
    </LinearLayout>

    <Button
        android:id="@+id/broadcastButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/broadcost"
        android:layout_margin="10dp" />

    <Button
        android:id="@+id/connectwifiButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/connectwifi"
        android:layout_margin="10dp" />

</LinearLayout>
