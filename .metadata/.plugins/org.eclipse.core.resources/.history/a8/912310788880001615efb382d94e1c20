package com.rokid.rkcommonlibrary.mediaplayer;

import android.media.MediaPlayer;

/**
 * Created by Bassam on 16/8/19.
 */
public interface RKMediaPlayCallback {
    void onPrepared(RKMediaDataBean rkMediaDataBean, MediaPlayer mp);

    void onCompletion(RKMediaDataBean rkMediaDataBean, MediaPlayer mp);

    void onError(RKMediaDataBean rkMediaDataBean, MediaPlayer mp, int what, int extra);

    void onSeekComplete(RKMediaDataBean rkMediaDataBean, MediaPlayer mp);

    void onInfo(RKMediaDataBean rkMediaDataBean, MediaPlayer mp, int what, int extra);

    void onBufferingUpdate(RKMediaDataBean rkMediaDataBean, MediaPlayer mp, int percent);
}
