package com.rokid.rkcommonlibrary.rksysapi;

import rokid.os.IRKLumen;

/**
 * Created by Bassam on 16/7/19.
 * 灯光\亮度工具类
 */
public class RKLumenUtil {
    /**
     * 当前类的实例对象
     */
    private static RKLumenUtil instance;

    /**
     * 单例方法调用
     *
     * @return
     */
    public static RKLumenUtil getInstance() {
        if (instance == null) {
            synchronized (RKLumenUtil.class) {
                if (instance == null) {
                    instance = new RKLumenUtil();
                }
            }
        }
        return instance;
    }


    /**
     * 释放灯光控制
     *
     * @return
     */
    public boolean discardCanvas() {
        try {
            IRKLumen irkLumen = RKApiManager.getInstance().getmIRKLumen();
            if (irkLumen != null) {
                //  irkLumen.discardCanvas();
                return true;
            }
        } catch (Exception e) {
            e.printStackTrace();
        }
        return false;
    }
}
