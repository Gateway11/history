package com.rokid.rkcommonlibrary.rksysapi;

import rokid.os.IRKAccountManager;
import rokid.service.interfaces.RKSettingsInterface;

/**
 * Created by Bassam on 16/7/25.
 * 获取账户信息工具类
 */
public class RKAccountUtil {
    /**
     * 当前类的实例对象
     */
    private static RKAccountUtil instance;

    /**
     * 单例方法调用
     *
     * @return
     */
    public static RKAccountUtil getInstance() {
        if (instance == null) {
            synchronized (RKAccountUtil.class) {
                if (instance == null) {
                    instance = new RKAccountUtil();
                }
            }
        }
        return instance;
    }

    /**
     * 获取Rokid ID
     *
     * @return
     */
    public String getRokidID() {
        try {
            IRKAccountManager accountManager = RKApiManager.getInstance().getmIRKAccountManager();
            if (accountManager != null) {
                return accountManager.getR2ID();
            }
        } catch (Exception e) {
            e.printStackTrace();
        }
        return null;
    }

    /**
     * 获取MasterID信息
     *
     * @return
     */
    public String getMasterID() {
        try {
            RKSettingsInterface settings = RKApiManager.getInstance().getmRKSettingsInterface();
            if (settings != null) {
                return settings.getMaster();
            }
        } catch (Exception e) {
            e.printStackTrace();
        }
        return null;
    }
}
