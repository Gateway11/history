package com.rokid.rkcommonlibrary.utils;

import android.content.pm.PackageInfo;
import android.content.pm.PackageManager;

import com.rokid.rkcommonlibrary.RKApplicationEX;

/**
 * Created by Bassam on 16/7/26.
 */
public class RKProjectInfo {
    /**
     * 获取应用的Demain
     *
     * @return
     */
    public static String getProjectDomain() {
        if (RKApplicationEX.getInstance() == null) {
            return "";
        }
        return RKApplicationEX.getInstance().getPackageName();
    }

    /**
     * 获取当前应用的版本
     *
     * @return
     */
    public static String getProjectVersion() {
        try {
            if (RKApplicationEX.getInstance() == null) {
                return "";
            }
            PackageManager manager = RKApplicationEX.getInstance().getPackageManager();
            if (manager == null) {
                return "";
            }
            PackageInfo info = manager.getPackageInfo(RKApplicationEX.getInstance()
                    .getPackageName(), 0);
            if (info == null) {
                return "";
            }
            return info.versionName;
        } catch (Exception e) {
            e.printStackTrace();
        }
        return "";
    }
}
