package rokid.os;

import android.os.IInterface;
import android.os.RemoteException;
import android.os.IBinder;

public interface IRKSettingsServices extends IInterface{

	public final String descriptor = "com.rokid.rksettings.RKSettingsServices";
	public final String CALLBACK_DESCRIPTION = "com.rokid.service.account.login";

	public void init()throws RemoteException;
	public boolean checkNetwork()throws RemoteException;
	public boolean login()throws RemoteException;
	public boolean bindMaster()throws RemoteException;
	public boolean unbindMaster()throws RemoteException;

	public void loginSuccess()throws RemoteException;
	public void loginFail()throws RemoteException;
	public void bindMasterSuccess(String masterId)throws RemoteException;
	public void bindMasterFail(String masterId)throws RemoteException;
	public void unbindMasterSuccess()throws RemoteException;
	public void unbindMasterFail(String masterId)throws RemoteException;
	
	public final int TRANSACTION_INIT_SERVICE= IBinder.FIRST_CALL_TRANSACTION;
	public final int TRANSACTION_CHECK_NETWORK= IBinder.FIRST_CALL_TRANSACTION+1;
	public final int TRANSACTION_LOGIN= IBinder.FIRST_CALL_TRANSACTION+2;
	public final int TRANSACTION_BIND_MASTER= IBinder.FIRST_CALL_TRANSACTION+3;
	public final int TRANSACTION_UNBIND_MASTER=IBinder.FIRST_CALL_TRANSACTION+4; 

	public final int TRANSACTION_LOGIN_SUCCESSFULLY = IBinder.FIRST_CALL_TRANSACTION + 2000;
	public final int TRANSACTION_LOGIN_FAILED = IBinder.FIRST_CALL_TRANSACTION + 2001;
	public final int TRANSACTION_BIND_SUCCESSFULLY = IBinder.FIRST_CALL_TRANSACTION + 2002;
	public final int TRANSACTION_BIND_FAILED = IBinder.FIRST_CALL_TRANSACTION + 2003;
	public final int TRANSACTION_UNBIND_SUCCESSFULLY = IBinder.FIRST_CALL_TRANSACTION + 2004;
	public final int TRANSACTION_UNBIND_FAILED = IBinder.FIRST_CALL_TRANSACTION + 2005;
}
