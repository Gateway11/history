package com.rokid.rkcommonlibrary.ui.view;

import android.util.Log;

import com.rokid.rkcommonlibrary.beans.RKNLPBean;

/**
 * Created by Bassam on 5/15/16.
 */
public interface RKBaseView {

    /**
     * 根据NLP显示不同的界面
     */
    void showViewByNLp(RKNLPBean nlpBean);
    /************提示TTS Start***************/
    /**
     * 没有数据传递器，需要提示错误的TTS
     */
    void showNoIntentErrorTTS();

    /**
     * 跳转过来的Action不对，需要提示错误的TTS
     */
    void showActivonErrorTTS();

    /**
     * 没有NLP数据错误
     */
    void showNoNLPDateErrorTTS();

    /**
     * No NLP解析错误
     */
    void showParseNLPErrorTTS();

    /**
     * NLP 校验不通过，domain或者intent错误
     */
    void showNLPErrorTTS();
    /************提示TTS end***************/
}
