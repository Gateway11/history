package com.rokid.rkcommonlibrary.config;

import android.os.Environment;

import com.rokid.rkcommonlibrary.R;
import com.rokid.rkcommonlibrary.RKApplicationEX;

import java.io.File;

/**
 * Created by Bassam on 5/5/16.
 */
public class RKProjectConfig {
    public static int HTTP_REQUEST_TIMEOUT = 10;//单位秒
    /**
     * sharepreference 的名称
     */
    public static String RKSP_NAME = RKApplicationEX.getInstance().getString(R.string.app_name);
    /************
     * 文件路径
     *************/
    public static String CACHE_DIR = Environment
            .getExternalStorageDirectory().getPath() + File.separator + RKApplicationEX.getInstance
            ().getString(R
            .string.app_name);
    public static String CACHE_IMAGE_DIR = CACHE_DIR + File.separator + "image";
    public static String CACHE_VOICE_DIR = CACHE_DIR + File.separator + "voice";
    /*************
     * 日志配置信息
     ******************/
    public static boolean allowLog = true;//是否开启日志
    public static boolean allowD = true;
    public static boolean allowE = true;
    public static boolean allowI = true;
    public static boolean allowV = true;
    public static boolean allowW = true;
    public static String logTag = RKApplicationEX.getInstance().getString(R.string.app_name);
}
