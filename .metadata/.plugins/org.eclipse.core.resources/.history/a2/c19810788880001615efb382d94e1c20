package com.rokid.rkcommonlibrary.rksysapi;
import rokid.service.interfaces.RKSettingsInterface;

/**
 * Created by Bassam on 16/7/26.
 * 设备信息工具类
 */
public class RKDeviceInfoUtil {
    /**
     * 当前类的实例对象
     */
    private static RKDeviceInfoUtil instance;

    /**
     * 单例方法调用
     *
     * @return
     */
    public static RKDeviceInfoUtil getInstance() {
        if (instance == null) {
            synchronized (RKAccountUtil.class) {
                if (instance == null) {
                    instance = new RKDeviceInfoUtil();
                }
            }
        }
        return instance;
    }

    /**
     * 获取语言版本
     *
     * @return
     */
    public String getLanguage() {
        try {
            RKSettingsInterface settings = RKApiManager.getInstance().getmRKSettingsInterface();
            if (settings != null) {
                return settings.getLanguage();
            }
        } catch (Exception e) {
            e.printStackTrace();
        }
        return null;
    }

    /**
     * 返回系统版本号
     *
     * @return
     */
    public String getSysVersion() {
        return android.os.Build.VERSION.RELEASE;
    }

    /**
     * 返回设备品牌
     *
     * @return
     */
    public String getDeviceBrand() {
        return android.os.Build.BRAND;
    }

    /**
     * 获取设备序列号
     * @return
     */
    public String getDeviceSerial() {
        return android.os.Build.SERIAL;
    }

    /**
     * 返回设备型号
     *
     * @return
     */
    public String getDeviceModel() {
        return android.os.Build.MODEL;
    }
}
