package com.rokid.rkcommonlibrary.rksysapi;

import android.text.TextUtils;

import com.google.gson.Gson;
import com.rokid.rkcommonlibrary.beans.RKLocationBean;
import com.rokid.rkcommonlibrary.utils.RKLogUtil;

import rokid.service.interfaces.RKSettingsInterface;

/**
 * Created by Bassam on 16/7/25.
 */
public class RKLocationUtil {
    /**
     * 当前类的实例对象
     */
    private static RKLocationUtil instance;

    /**
     * 单例方法调用
     *
     * @return
     */
    public static RKLocationUtil getInstance() {
        if (instance == null) {
            synchronized (RKLocationUtil.class) {
                if (instance == null) {
                    instance = new RKLocationUtil();
                }
            }
        }
        return instance;
    }

    /**
     * 获取Rokid 位置信息
     *
     * @return
     */
    public String getRokidLocation() {
        try {
            RKSettingsInterface settings = RKApiManager.getInstance().getmRKSettingsInterface();
            if (settings != null) {
                return settings.whereIsRokid();
            }
        } catch (Exception e) {
            e.printStackTrace();
        }
        return null;
    }

    /**
     * 获取位置
     *
     * @return
     */
    public RKLocationBean getRokidLocationBean() {
        String location = getRokidLocation();
        if (TextUtils.isEmpty(location)) {
            RKLogUtil.e("location is null");
            return null;
        }
        try {
            Gson gson = new Gson();
            return gson.fromJson(location, RKLocationBean.class);
        } catch (Exception e) {
            e.printStackTrace();
        }
        return null;
    }

    /**
     * 获取Rokid所在的地区,中国的话为cn
     *
     * @return
     */
    public String getRegion() {
        try {
            RKSettingsInterface settings = RKApiManager.getInstance().getmRKSettingsInterface();
            if (settings != null) {
                return settings.getRegion();
            }
        } catch (Exception e) {
            e.printStackTrace();
        }
        return null;
    }

}
